@{
    ViewData["Title"] = "Login Page";
}

<div class="container p-5">
    <div class="card" style="width: 30rem;">
        <form class="px-4 py-3" asp-controller="Login" asp-action="New">
            <div class="form-group">
                <label for="exampleDropdownFormEmail1">Username</label>
                <input type="text" class="form-control" id="exampleDropdownFormEmail1" placeholder="Username" name="Username">
            </div>
            <div class="form-group">
                <label for="exampleDropdownFormPassword1">Password</label>
                <input type="password" class="form-control" id="exampleDropdownFormPassword1" placeholder="Password" name="Password">
            </div>
            <div class="form-group">
                <label for="exampleDropdownFormPassword1">Confirm password</label>
                <input type="password" class="form-control" id="exampleDropdownFormPassword1" placeholder="Password">
            </div>
            <div class="form-group clearfix" style="width: 30rem;">
                <div class="form-group" style="float: left">
                    <img id="Picture" src="/img/1.png">
                    <input id="Img" type="hidden" name="Img" value="/img/1.png" />
                </div>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" style="float: none">Edit</button>
            </div>
            <button type="submit" class="btn btn-primary">Sign up</button>
        </form>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">User Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Login" asp-action="New">
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <label class="col">
                                <input type="radio" name="Picture" value="/img/1.png" checked>
                                <img src="/img/1.png">
                            </label>
                            <label class="col">
                                <input type="radio" name="Picture" value="/img/2.png" checked>
                                <img src="/img/2.png">
                            </label>
                            <div class="w-100"></div>
                            <label class="col">
                                <input type="radio" name="Picture" value="/img/3.png" checked>
                                <img src="/img/3.png">
                            </label>
                            <div class="col"> </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button onclick="ChangeImage()" type="button" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function ChangeImage() {
        const radioButtons = document.querySelectorAll('input[name="Picture"]');

        let selectedImg;
        for (const radioButton of radioButtons) {
            if (radioButton.checked) {
                selectedImg = radioButton.value;
                break;
            }
        }
        document.getElementById("Img").value = selectedImg;
        document.getElementById("Picture").src = selectedImg;
    }
</script>
